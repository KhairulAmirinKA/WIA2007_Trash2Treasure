<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="10dp"
    android:padding="20dp"
    android:background="@drawable/box_with_shadow"
    android:backgroundTint="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/IsReadDot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            app:materialIcon="circle"
            app:materialIconColor="@color/white"/>

        <TextView
            android:id="@+id/TVNotificationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reminder"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/TVNotificationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:09 AM"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:id="@+id/TVNotificationBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Today's truck is expected to arrive around 14 minutes."
        android:textColor="@color/black"
        android:textSize="18sp"/>
</LinearLayout>