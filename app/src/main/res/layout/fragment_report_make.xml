<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ReportMake">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="40dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local Authority (PBT)"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type of Complaint"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub complaint"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complaint Description"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ETReport_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_edit_text"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Please provide the details of the complaint"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:minHeight="48dp"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/TVReportComplaintLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complaint Location"
            android:textSize="24sp" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerView"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/TVAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/ETReport_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_edit_text"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Please provide the address"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:minHeight="48dp"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/BtnReportSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:text="Submit Report"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</FrameLayout>