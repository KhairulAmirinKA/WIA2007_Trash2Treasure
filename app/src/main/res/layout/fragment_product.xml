<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jeans_bag" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Jeans bag"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="RM40"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/productDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details Handmade from repurposed jeans, each bag is a unique fashion statement."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linda"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/listedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listed 2 days ago"
        android:textSize="18sp" />

    <Button
        android:id="@+id/contactSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Seller" />

</LinearLayout>